{
    "rebaseWhen": "never",
    "prHeader": "Greetings, human. Please review this autogenerated version update PR. Update behavior is configured via `renovate.json`.",
    "onboarding": false,
    "extends": [
      "config:base"
    ],
    "enabledManagers": [ "regex", "docker" ],
    "prHourlyLimit": 0,
    "packageRules": [
      {
        "labels": [
          "major"
        ],
        "matchUpdateTypes": [
          "major"
        ]
      },
      {
        "labels": [
          "minor"
        ],
        "matchUpdateTypes": [
          "minor"
        ]
      },
      {
        "labels": [
          "patch"
        ],
        "matchUpdateTypes": [
          "patch"
        ]
      },
      {
        "labels": [
          "docker"
        ],
        "matchDatasources": [
          "docker"
        ]
      },
      {
        "matchPackageNames": "renovatebot/github-action",
        "extends": [
          "schedule:weekly"
        ]
      }
    ],
    "regexManagers": [
      {
        "fileMatch": [
          "\\.tf$"
        ],
        "matchStrings": [
          "\\s*renovate: image=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*_?(version|VERSION|image|default)\\s+=\\s+\".*:(?<currentValue>.*)\"\\s*"
        ],
        "datasourceTemplate": "docker",
        "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}docker{{/if}}"
      }
    ]
  }